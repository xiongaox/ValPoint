{
    "git": {
        "deploymentEnabled": {
            "docker_local": false
        }
    },
    "buildCommand": "npm run build:all",
    "outputDirectory": "dist",
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/valpoint.json",
            "destination": "/api/valpoint"
        },
        {
            "source": "/wiki",
            "destination": "/wiki/index.html"
        },
        {
            "source": "/wiki/",
            "destination": "/wiki/index.html"
        },
        {
            "source": "/((?!wiki|api|assets|_next|\\.well-known).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*).html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/wiki/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=86400"
                }
            ]
        }
    ]
}